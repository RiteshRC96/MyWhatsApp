<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Make ActionBar transparent -->
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>

        <!-- Customize ActionBar text color and overflow icon color -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowStyle</item>
    </style>

    <!-- Define ActionBar style -->
    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- Define ActionBar title text color -->
    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Style for overflow (three dots) icon -->
    <style name="MyOverflowStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/menu</item> <!-- Your custom black icon -->
    </style>
    <style name="MainActivityTheme" parent="AppTheme">
        <!-- Set ActionBar color to white -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <!-- Define the Theme.MyWhatsApp theme if required -->
    <style name="Theme.MyWhatsApp" parent="AppTheme" />
</resources>
